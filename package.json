{
  "name": "virkz-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "deploy:commands": "tsx src/deploy-commands.ts",
    "prisma:gen": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "panel": "tsx src/panel/server.ts",
    "panel:dev": "npm --prefix panel run dev",
    "panel:build": "npm --prefix panel run build",
    "panel:start": "npm --prefix panel run start"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pino": "^9.3.2",
    "rrule": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "prisma": "^5.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
